{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "outDir": "./dist/",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "sourceMap": false,
    "lib": [
      "dom",
      "esnext"
    ],
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    ".git",
    "node_modules",
    "dist"
  ]
}